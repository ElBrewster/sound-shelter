// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Donor {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  phone     String
  donations Donation[]
}

model Donation {
  id       Int    @id @default(autoincrement())
  donorId  Int    @unique
  Donor    Donor  @relation(fields: [donorId], references: [id])
  category String
  date     String
  amount   Int
}
